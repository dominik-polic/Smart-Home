<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorApp"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="org.no_ip.wqwdpxd.homeautomationwear_php.MainActivity">


        <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:elevation="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                tools:context="org.no_ip.wqwdpxd.homeautomationwear_php.LoginActivity"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/my_toolbar">

                <LinearLayout

                    android:elevation="4dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Gates"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView2" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:text="Close Car Gate"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnGate2Close"
                            android:layout_weight="1"
                            android:enabled="false" />

                        <Button
                            android:text="Open Car gate"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnGate2Open"
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:enabled="false" />

                    </LinearLayout>

                    <Button
                        android:text="Open Small Gate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnGate1ShortOpen"
                        android:layout_weight="1"
                        android:enabled="false" />

                </LinearLayout>

                <LinearLayout
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Lights in my room"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:text="Lights Off"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnLightsOff"
                            android:layout_weight="1"
                            android:enabled="false" />

                        <Button
                            android:text="Lights On"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnLightsOn"
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:enabled="false" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:text="Brightness -"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnBrightnessMasterDecrease"
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:enabled="false" />

                        <Button
                            android:text="Brightness +"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnBrightnessMasterIncrease"
                            android:layout_weight="1"
                            android:enabled="false" />

                    </LinearLayout>

                </LinearLayout>

                <View style="@style/Divider"/>

                <View style="@style/Divider"/>
                <LinearLayout
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Doors"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView3" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:text="Lock House Door"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnDoorHouseLock"
                            android:layout_weight="1"
                            android:enabled="false" />

                        <Button
                            android:text="Unlock House Door"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:enabled="false"
                            android:id="@+id/btnDoorHouseUnlock" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:text="Lock Room Door"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnDoorLock"
                            android:layout_weight="1"
                            android:enabled="false" />

                        <Button
                            android:text="Unlock Room Door"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:enabled="false"
                            android:id="@+id/btnDoorUnlock" />
                    </LinearLayout>
                </LinearLayout>

                <View style="@style/Divider"/>

                <LinearLayout
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="RGB Lights Settings Control"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView4" />

                    <LinearLayout
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:paddingTop="@dimen/activity_vertical_margin"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="Mode"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView5"
                            android:layout_weight="1" />

                        <Spinner
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/spinner"
                            android:layout_weight="2" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:text="Bright-"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnBrightnessRGBDecrease"
                            android:layout_weight="1" />

                        <Button
                            android:text="Remote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnRGBRemote"
                            android:layout_weight="1" />

                        <Button
                            android:text="Bright+"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnBrightnessRGBIncrease"
                            android:layout_weight="1" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    style="@style/Divider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/view3" />

                <View
                    style="@style/Divider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/view4" />

                <LinearLayout
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="RGB Color Picker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView7" />

                    <Button
                        android:text="Color Picker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnPickColor" />

                </LinearLayout>

                <View
                    style="@style/Divider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/view5" />

                <LinearLayout
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Light Brightness"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView10" />

                    <SeekBar
                        android:max="127"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/skbBrightnessMaster" />

                    <TextView
                        android:paddingTop="@dimen/activity_vertical_margin"
                        android:text="RGB Brightness"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView8" />

                    <SeekBar
                        android:max="127"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/skbBrightnessRGB" />

                    <TextView
                        android:paddingTop="@dimen/activity_vertical_margin"
                        android:text="RGB Speed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView9" />

                    <SeekBar
                        android:max="127"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/skbSpeedRGB" />
                </LinearLayout>

                <LinearLayout
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Administrative options"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView6" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:text="Test LED"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnTestConnection"
                            android:layout_weight="1"
                            android:textColor="#000000"
                            android:backgroundTint="#FFE082" />

                        <Button
                            android:text="Ring a Bell"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnBellRing"
                            android:layout_weight="1"
                            android:textColor="#000000"
                            android:backgroundTint="#FFE082" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:text="Stop Server"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnStopServer"
                            android:layout_weight="1"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="#B71C1C" />

                        <Button
                            android:text="Reset Arduino"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnResetArduino"
                            android:layout_weight="1"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="#B71C1C" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>


    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee"/>

</android.support.v4.widget.DrawerLayout>

</LinearLayout>